---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="Welcome to Fusion Chat!">
	<Nav />
	<main class="mx-auto px-4 text-white text-center text-xl">
		<section>
			<div>
				<h1 class="//text-gradient">SEE THE PLACE...</h1>
				<p>
					...where you can be part of a discussion group, a music band, or an international community of artists. This place encourages spontaneous conversations and more frequent meetups with friends.
					<br>
					This is <strong>Fusion Chat</strong>!
				</p>
				
                <div id="open" class="mt-10 flex flex-wrap justify-around">
                    <a href="/get?auto=true" class="get__get">Download <span class="getForSpan"></span></a>
                    <a href="/app" class="get__get">Open Fusion Chat in Browser</a>
                </div>
			</div>
		</section>
		
		<section>
			<div>
				<ul role="list" class="link-card-grid">
					<Card
						title="Easy to Use"
						body="Simple interface, easy to navigate."
					/>
					
					<Card
						title="Customizable Themes"
						body="Personalize the look according to preferences."
					/>
					
					<Card
						title="Community and Support"
						body="Support from the community and team."
					/>
					
					<Card
						title="Updates and Information"
						body="Receive the latest updates."
					/>
					
					<Card
						title="Privacy and Security"
						body="Strong encryption for your privacy."
					/>
					
					<Card
						title="Multi-platform Versions"
						body="Available on various devices."
					/>
					
					<Card
						title="User Management"
						body="Easy community management."
					/>
					
					<Card
						title="Starter Kits"
						body="Quick start with starter kits."
					/>				
				</ul>
			</div>
		</section>

		<section>
			<div>
				<h3>It's time to begin a new journey!</h3>
				<br />
				<a href="/get?auto=true" id="getBtnLast" class="get__get">Download <span class="getForSpan"></span></a>
			</div>
		</section>
	</main>
</Layout>

<style>
	main{
		width: 800px;
		max-width: calc(100% - 2rem);
		line-height: 1.6;
	}

	h1{
		font-size: 4rem;
		margin-bottom: 26px;
	}

	section{
		min-height: 450px;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 7rem;
	}

	section > div{
		width: 100%;
		height: 100%;
	}

	.text-gradient{
		background: linear-gradient(
			90deg,
			rgb(var(--accent)) 0%,
			rgb(var(--accent-light)) 65%,
			white 100%
		);

		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		-moz-text-fill-color: transparent;
		color: transparent;
	}

	.link-card-grid{
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	.get__get{
		border-radius: 10px;
		background-color: var(--accentC);
		padding: 10px 15px;
		transition: background-color 0.3s ease;
	}

	.get__get:hover{
		background-color: var(--back);
		margin: -3px;
		border: 3px solid var(--accentC);
	}

	@media screen and (max-width: 800px){
		#open .get__get{
			margin: 1rem;
		}
	}
</style>

<script>
	function getSystemName(){
		const userAgent = window.navigator.userAgent,
			platform = window.navigator.platform,
			macosPlatforms = ['macOS', 'Macintosh', 'MacIntel', 'MacPPC', 'Mac68K'],
			windowsPlatforms = ['Win32', 'Win64', 'Windows', 'WinCE'],
			iosPlatforms = ['iPhone', 'iPad', 'iPod'];

		if(macosPlatforms.indexOf(platform) !== -1) return "Mac OS";
		else if(iosPlatforms.indexOf(platform) !== -1) return "iOS";
		else if(windowsPlatforms.indexOf(platform) !== -1) return "Windows";
		else if(/Android/.test(userAgent)) return "Android";
		else if(/Linux/.test(platform)) return "Linux";
		return "";
	}

	(function(){
		let getForName = getSystemName();
		if(!getForName) return;
		getForName = "for "+getForName;
		document.querySelectorAll(".getForSpan").forEach(e => {
			e.innerHTML = getForName;
		})
	})();
</script>