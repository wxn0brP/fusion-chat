{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "paths": {},
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist-js",
        "inlineSourceMap": true,
        "removeComments": true,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}