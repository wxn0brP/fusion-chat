<%- include('main/nav') %>
<main>
    <section>
        <div>
            <h1 class="//text-gradient">SEE THE PLACE...</h1>
            <p>
                ...where you can be part of a discussion group, a music band, or an international community of artists. This place encourages spontaneous conversations and more frequent meetups with friends.
                <br>
                This is <strong>Fusion Chat</strong>!
            </p>
            
            <div id="open">
                <a href="/get?auto=true" class="get__get">Download <span class="getForSpan"></span></a>
                <a href="/app" class="get__get">Open Fusion Chat in Browser</a>
            </div>
        </div>
    </section>
    
    <section>
        <div>
            <ul role="list" class="link-card-grid">
                <% const cards = [
                    { title: "Easy to Use", body: "Simple interface, easy to navigate." },
                    { title: "Customizable Themes", body: "Personalize the look according to preferences." },
                    { title: "Community and Support", body: "Support from the community and team." },
                    { title: "Updates and Information", body: "Receive the latest updates." },
                    { title: "Privacy and Security", body: "Strong encryption for your privacy." },
                    { title: "Multi-platform Versions", body: "Available on various devices." },
                    { title: "User Management", body: "Easy community management." },
                    { title: "Starter Kits", body: "Quick start with starter kits." }
                ]; %> 

                <% cards.forEach(card => { %>
                    <%- include('main/card', { props: card }) %> 
                <% }) %>
            </ul>
        </div>
    </section>

    <section>
        <div>
            <h3>It's time to begin a new journey!</h3>
            <br />
            <a href="/get?auto=true" id="getBtnLast" class="get__get">Download <span class="getForSpan"></span></a>
        </div>
    </section>
</main>

<style>
	a{
		color: var(--txt);
	}

	main{
		width: 800px;
		max-width: calc(100% - 2rem);
		line-height: 1.6;

		margin-left: auto;
		margin-right: auto;
		padding-left: 1rem;
		padding-right: 1rem;
		color: white;
		text-align: center;
		font-size: 1.25rem;
	}

	h1{
		font-size: 4rem;
		margin-bottom: 26px;
	}

	section{
		min-height: 450px;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 7rem;
	}

	section > div{
		width: 100%;
		height: 100%;
	}

	#open{
		margin-top: 2.5rem;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-around;
	}

	.text-gradient{
		background: linear-gradient(
			90deg,
			var(--accent) 0%,
			#c8aadc 65%,
			white 100%
		);

		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		-moz-text-fill-color: transparent;
		color: transparent;
	}

	.link-card-grid{
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	.get__get{
		border-radius: 10px;
		background-color: var(--accent);
		padding: 10px 15px;
		transition: background-color 0.5s ease;
	}

	.get__get:hover{
		background-color: var(--back);
		margin: -3px;
		border: 3px solid var(--accent);
	}

	@media screen and (max-width: 800px){
		#open .get__get{
			margin: 1rem;
		}
	}
</style>

<script>
	function getSystemName(){
		const userAgent = window.navigator.userAgent,
			platform = window.navigator.platform,
			macosPlatforms = ['macOS', 'Macintosh', 'MacIntel', 'MacPPC', 'Mac68K'],
			windowsPlatforms = ['Win32', 'Win64', 'Windows', 'WinCE'],
			iosPlatforms = ['iPhone', 'iPad', 'iPod'];

		if(macosPlatforms.indexOf(platform) !== -1) return "Mac OS";
		else if(iosPlatforms.indexOf(platform) !== -1) return "iOS";
		else if(windowsPlatforms.indexOf(platform) !== -1) return "Windows";
		else if(/Android/.test(userAgent)) return "Android";
		else if(/Linux/.test(platform)) return "Linux";
		return "";
	}

	(function(){
		let getForName = getSystemName();
		if(!getForName) return;
		getForName = "for "+getForName;
		document.querySelectorAll(".getForSpan").forEach(e => {
			e.innerHTML = getForName;
		})
	})();
</script>