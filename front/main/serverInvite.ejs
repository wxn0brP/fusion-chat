/// { "title": "Fusion Chat | Join To Group" }
<main>
    <section id="state-join" style="display: none;">
        <h1 id="groupName"></h1>
        <img id="groupImg" style="display: none;">
        <button onclick="join()">Join to group</button>
    </section>
    <section id="state-joined" style="display: none;">
        <h1>You is arleady in this group</h1>
        <a href="/app">Open App</a>
    </section>
    <section id="state-error" style="display: none;"></section>
    <section id="state-success" style="display: none;">
        <h1>Success</h1>
        <a href="/app">Open App</a>
    </section>
</main>

<style>
    main{
        width: 500px;
        max-width: calc(100% - 2rem);
        line-height: 1.6;
        text-align: center;

        color: var(--txt);
        border-radius: 1rem;
        padding: 1rem;
        border: 2px solid var(--accent);
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 0 0 10px 5px rgba(var(--accentRGB), .5);
    }

    section{
        padding: 1rem;
        margin: auto;
    }

    h1{
        margin-bottom: 1rem;
    }

    button{
        margin-top: 1rem;
        color: var(--txt);
        background-color: var(--back);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 1rem;
        cursor: pointer;
        transition: border-color 0.5s, box-shadow 0.5s;
        border: 2px solid var(--accent);
        box-shadow: 0 0 10px 5px rgba(var(--accentRGB), .5);
    }

    button:hover{
        border-color: var(--txt);
        box-shadow: 0 0 10px 5px var(--txt);
    }

    img{
        width: 128px;
        height: 128px;
        object-fit: cover;
        border-radius: 50%;
        margin: auto;
    }

    a{
        text-decoration: none;
        color: var(--accent);
    }

    a:hover{
        text-decoration: underline;
    }

    @media screen and (max-width: 800px){
        main{
            width: 100%;
        }
    }
</style>

<script src="/js/serverInvite.js"></script>