<main>
    <div id="replyClose" class="context-menu" onclick="magistral.messInteract.replyClose()" translate>Reply to message</div>
    <div id="editClose" class="context-menu" onclick="magistral.messInteract.editMessClose()" translate>Edit message</div>
    <div id="messages_nav" style="display: none;">
        <div id="messages_nav__priv">

        </div>
        <div id="messages_nav__realm">
            <span id="messages_nav__realm__description"></span>
        </div>
        <div id="messages_nav__main">
            <button onclick="magistral.messInteract.displayPinned()" class="btn">📌</button>
            <button onclick="magistral.messInteract.search()" class="btn">🔎</button>
        </div>
    </div>
    <div id="messages" style="display: none;"></div>
    <div id="main__view">
        <div class="only_mobile">
            <button onclick="magistral.mainView.showNav()" translate class="btn">Show</button>
        </div>
        <div id="main__view__nav" class="only_desktop">
            <button onclick="magistral.mainView.changeView('all')" translate main_view="all" class="btn">All</button>
            <button onclick="magistral.mainView.changeView('online')" translate main_view="online" class="btn">Online</button>
            <button onclick="magistral.mainView.changeView('offline')" translate main_view="offline" class="btn">Offline</button>
            <button onclick="magistral.mainView.addFriend()" translate class="btn">Add friend</button>
            <button onclick="magistral.mainView.changeView('requests')" main_view="requests" class="btn">
                <span translate>Friend requests</span>
                <span id="main__view__requests__count"></span>
            </button>
        </div>
        <div id="main__view__friends">
            <div id="main__view__noFriends" translate style="text-align: center;">No friends</div>
            <div id="main__view__friends_container"></div>
        </div>
        <div id="main__view__requests">
            <div id="main__view__noRequests" translate style="text-align: center;">No requests</div>
            <div id="main__view__requests_container"></div>
        </div>
    </div>
    <div id="bar">
        <div id="barc">
            <div id="barc__commads"></div>
            <div contenteditable="true" id="mess-input"></div>
            <div id="barc__others">
                <button id="barc__emocji" onclick="magistral.messInteract.emocji()">❤️</button>
                <button id="barc__sendFile" onclick="magistral.messFunc.sendFile()">📁</button>
                <button id="barc__sendBtn" onclick="magistral.messInteract.sendMess()" loadInner="/assets/send.svg">Send</button>
            </div>
        </div>
    </div>
</main>