{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "Node",
        "paths": {
            "#logic/*": ["./back/logic/*"],
            "#types/*": ["./back/types/*"],
            "#db": ["./back/dataBase"],
            "#codes": ["./back/codes"],
            "#firebase": ["./back/firebase"],
            "#schedule": ["./back/schedule"],
            "#scl/*": ["./back/socket/chat/logic/*"],
            "#id": ["./back/types/id"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist-back",
        "inlineSourceMap": true,
        "removeComments": true,
    },
    "include": [
        "./back"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}